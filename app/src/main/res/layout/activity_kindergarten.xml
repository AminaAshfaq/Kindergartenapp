<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/kind1">

    <Button
        android:id="@+id/sPoem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Poem"
        android:textStyle="bold|italic"
        android:background="@android:color/holo_orange_light"
        android:onClick="OnButtonClick"
        android:layout_marginStart="16dp"
        android:layout_alignBaseline="@+id/sStory"
        android:layout_alignBottom="@+id/sStory"
        android:layout_alignParentStart="true" />


    <Button
        android:id="@+id/sStory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Story"
        android:onClick="OnButtonClick"
        android:textStyle="bold|italic"
        android:background="@android:color/holo_orange_light"
        android:layout_alignBaseline="@+id/sManner"
        android:layout_alignBottom="@+id/sManner"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/sManner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manner"
        android:onClick="OnButtonClick"
        android:textStyle="bold|italic"
        android:background="@android:color/holo_orange_light"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="79dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/kind2"
        android:layout_marginTop="13dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>